<h1 class="text-center">Signup for #chanl</h1>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= render 'shared/errors', object: @user  %>, 
      
      <%= form_for @user do |f| %>
      <div class="well">
        <div class="form-group">
          <%= f.label :username, class: "form-title" %><br />
          <%= f.text_field :username, placeholder: "Enter username", class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :email, class: "form-title" %><br />
          <%= f.email_field :email, placeholder: "Enter email", class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :password, class: "form-title" %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.submit 'Sign up', class: "btn btn-primary btn-lg" %>
        </div>
      </div>
      
      
      <% end %>
    </div>
  </div>
</div>