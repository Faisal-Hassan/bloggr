<div class="container" id="flash">
	<% flash.each do |name, msg| %>
		<div class='alert alert-<%="#{name}" %>'>
			<a href="#" class="close" data-dismiss="alert">&#215;</a>
			<h4 class="text-center"><%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %></h4>
		</div>
	<% end %>
</div>
