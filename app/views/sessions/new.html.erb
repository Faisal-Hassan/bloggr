<h1 class="text-center">Login</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
		<%= form_for :session, url: login_path do |f| %>
		
		<div class="well">
		  
		  <div class="form-group">
		    <%= f.label :email, class: "form-title" %><br />
		    <%= f.email_field :email, placeholder: "Enter email", class: "form-control auth" %>
		  </div>
		  
		  <div class="form-group">
		    <%= f.label :password, class: "form-title" %><br />
		    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: "form-control auth" %>
		  </div>
		  
		  <div class="form-group">
		    <%= f.submit "Login", class: "btn btn-primary btn-lg" %>
		  </div>
		</div>
		
		<% end %>
		
	</div>
</div>